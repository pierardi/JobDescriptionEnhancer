# TechScreen Interview Generation System
# Environment Configuration Template
# 
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env file to version control

# ============================================================================
# FLASK CONFIGURATION
# ============================================================================

# Environment: development, testing, production
FLASK_ENV=development

# Flask app module
FLASK_APP=app.py

# Secret key for sessions (generate with: python -c "import secrets; print(secrets.token_hex(32))")
# IMPORTANT: Use different key for production
FLASK_SECRET_KEY=your-secret-key-here-change-in-production

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# MySQL Connection String
# Format: mysql+pymysql://username:password@host:port/database_name
# Example: mysql+pymysql://techscreen:password123@localhost:3306/techscreen_db
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/techscreen_db

# Database settings
SQLALCHEMY_ECHO=False
SQLALCHEMY_TRACK_MODIFICATIONS=False

# ============================================================================
# CLAUDE API CONFIGURATION
# ============================================================================

# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-your-api-key-here

# Claude model (latest models)
# Options: claude-opus-4-1, claude-sonnet-4-5, claude-haiku-4-5
CLAUDE_MODEL=claude-opus-4-1

# Maximum tokens per request (adjust based on model and needs)
# Opus: up to 200,000
# Sonnet: up to 200,000  
# Haiku: up to 200,000
CLAUDE_MAX_TOKENS=4000

# ============================================================================
# INTERVIEW GENERATION CONFIGURATION
# ============================================================================

# Number of questions to generate per interview
INTERVIEW_QUESTION_COUNT=5

# Minimum criteria per question
QUESTION_CRITERIA_MIN=8

# Maximum criteria per question
QUESTION_CRITERIA_MAX=10

# ============================================================================
# CACHING CONFIGURATION
# ============================================================================

# Enable caching of similar questions to reduce API calls
ENABLE_QUESTION_CACHE=True

# Similarity threshold for cache hits (0.0 to 1.0)
# Higher = more strict matching, lower = more lenient
CACHE_SIMILARITY_THRESHOLD=0.85

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Only admin users can create JD enhancements and interviews
ADMIN_ONLY_FEATURE=True

# CORS origins (if using CORS)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ============================================================================
# PROCESSING CONFIGURATION
# ============================================================================

# Use async processing for long-running tasks
# Set to False for synchronous processing (blocks until complete)
ASYNC_PROCESSING=True

# Request timeout in seconds (for API calls)
REQUEST_TIMEOUT=300

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log file (if not set, logs to console only)
LOG_FILE=logs/app.log

# ============================================================================
# DEVELOPMENT / TESTING CONFIGURATION
# ============================================================================

# Debug mode (NEVER enable in production)
DEBUG=False

# Enable SQL query logging (useful for debugging)
SQLALCHEMY_ECHO=False

# Use mock Claude client for testing (no API calls)
USE_MOCK_CLAUDE=False

# ============================================================================
# PRODUCTION CONFIGURATION
# ============================================================================

# Application port (for Gunicorn/uWSGI)
PORT=5000

# Number of worker processes
WORKERS=4

# Bind address
BIND_ADDRESS=0.0.0.0

# ============================================================================
# OPTIONAL: EMAIL NOTIFICATIONS (for completion callbacks)
# ============================================================================

# Email settings (if implementing notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_EMAIL=admin@techscreen.com

# ============================================================================
# OPTIONAL: MONITORING & ANALYTICS
# ============================================================================

# Sentry DSN (error tracking) - get from https://sentry.io/
SENTRY_DSN=

# DataDog API key (metrics) - get from https://www.datadoghq.com/
DATADOG_API_KEY=

